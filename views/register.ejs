<%- include('./layouts/header') %>
    <h1 class="text-center mt-3">Register</h1>
    <div class="container">
        <div class="row">
            <div class="col-md-5 mx-auto">
                <div class="card card-body">
                    <div>
                        <form action="/auth/register" method="post">
                            <div  class="form-group ">
                                <label for="email">Email/Username</label>
                                <input type="text" name="email" id="email" class="form-control" value="<%= locals.email?email:'' %>"/>
                            </div>
                            <div class="form-group ">
                                <label for="password">Password</label>
                                <input type="password" name="password" id="password"class="form-control" />
                            </div>
                            <div class="form-group ">
                                <label for="password2">Confirm Password</label>
                                <input type="password" name="password2" id="password2" class="form-control"/>
                            </div>
                            <div class=" form-group m-3">
                                <input type="submit" value="Register" class=" btn btn-danger btn-lg btn-block form-control">
                            </div>
                        </form>
                    </div>
                    <div>
                        <p class="text-center">Already have an account? <span><a href="/auth/login">Login</a></span></p>
                    </div>                    
                </div>
            </div>
        </div>
    </div>
    <%- include('./layouts/footer') %>