<%- include('./layouts/header') %>
<h3 class="text-center mt-3">Login</h3>
<div class="container">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card card-body">
                <form action="/auth/login" method="post">
                    <div class="form-group">
                        <label id="email">Email/Username</label>
                        <input type="email" name="email" id="email" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label id="password">Password</label>
                        <input type="text" name="password" id="password" class="form-control"/>
                    </div>
                    <div class="form-group m-3">
                        <input type="submit" value="Login" class="btn btn-danger btn-lg btn-block form-control "/>
                    </div>
                </form>
                <div>
                    <p class="text-center">Don't have an account? <span><a href="/auth/register">Register</a></span></p>
                </div>

            </div>
        </div>
    </div>
</div>

<%- include('./layouts/footer') %>